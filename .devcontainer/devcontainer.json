{
    "name": "Rust Dev",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "[rust]": {
                    "editor.formatOnSave": true
                },
                "rust-analyzer.checkOnSave": true,
                "rust-analyzer.check.command": "clippy"
            },
            "extensions": [
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb",
                "tamasfe.even-better-toml",
                "serayuzgur.crates",
                "dtsvet.vscode-wasm"
            ]
        }
    }
}